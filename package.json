{
  "name": "common-pepper",
  "version": "1.0.0",
  "description": "A twitch user's personal butler.",
  "main": "common-pepper.js",
  "scripts": {
    "start": "cross-env NODE_ENV=live node common-pepper.js",
    "live:test": "cross-env NODE_ENV=live ./node_modules/nodemon/bin/nodemon.js common-pepper.js",
    "dev": "cross-env NODE_ENV=dev ./node_modules/nodemon/bin/nodemon.js common-pepper.js",
    "test": "cross-env NODE_ENV=test jest --silent",
    "test:log": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage=true --coverageDirectory=coverage --coverageProvider=v8",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pysudo/common-pepper.git"
  },
  "keywords": [
    "twitch",
    "bot",
    "mrdestructoid",
    "chats",
    "chatting",
    "chatter"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pysudo/common-pepper/issues"
  },
  "homepage": "https://github.com/pysudo/common-pepper#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "tmi.js": "^1.8.5",
    "toad-scheduler": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.1.0",
    "jest": "^27.3.1",
    "nodemon": "^2.0.14"
  },
  "nodemonConfig": {
    "ignore": [
      "./commands/main/say/*.json"
    ]
  }
}
